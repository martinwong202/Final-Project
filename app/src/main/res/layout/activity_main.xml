<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Black">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Blue"
        android:shadowColor="@color/White"/>

    <LinearLayout
        android:id="@+id/pokemon_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_pokemon_background"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="250dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/check_button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Search" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Add" />

    </LinearLayout>
        <LinearLayout
        android:id="@+id/pokemon_added"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="300dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_pokemon_gengar" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/pokemon_fight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_pokemon_fight">

        <ImageView
            android:id="@+id/Gengar_image"
            android:layout_width="224dp"
            android:layout_height="189dp"
            android:background="@drawable/ic_pokemon_gengar"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="100dp"/>
        <ImageView
            android:id="@+id/user_image"
            android:layout_width="224dp"
            android:layout_height="189dp"
            android:background="@drawable/ic_pokemon_gengar"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="100dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="300dp"
            android:layout_marginBottom="300dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pokemon_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_pokemon_home"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="261dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pokemon"
            android:textColor="@color/Blue"
            android:textSize="80dp" />

        <TextView
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Fight"
            android:textColor="@color/Blue"
            android:textSize="80dp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>